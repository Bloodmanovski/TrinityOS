module FileSystem.RandomDev;

import VFS.CharNode;
import VFS.DirectoryNode;
import Devices.Random;


class RandomDev : CharNode {
	this() { 
		super("random");
		length = 1024;
	}

	override long Read(ulong start, out byte[] data) {
		foreach (ref x; data)
			x = Random.Number & 0xFF;

		return data.length;
	}

	override long Write(ulong start, in byte[] data) {
		return data.length;
	}
}